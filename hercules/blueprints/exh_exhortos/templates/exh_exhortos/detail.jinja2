{% extends 'layouts/app.jinja2' %}
{% import 'macros/detail.jinja2' as detail %}
{% import 'macros/modals.jinja2' as modals %}
{% import 'macros/topbar.jinja2' as topbar %}

{% block title %}Exhorto {{ exh_exhorto.id }}{% endblock %}

{% block topbar_actions %}
    {% call topbar.page_buttons('Exhorto ' + exh_exhorto.id | string) %}
        {{ topbar.button_previous('Exhortos', url_for('exh_exhortos.list_active')) }}
        {% if current_user.can_edit('EXH EXHORTOS') %}
            {% if exh_exhorto.estado == "PENDIENTE" %}
                {{ topbar.button_edit('Editar', url_for('exh_exhortos.edit', exh_exhorto_id=exh_exhorto.id)) }}
            {% endif %}
        {% endif %}
        {% if current_user.can_admin('EXH EXHORTOS') %}
            {{ modals.button_modal('Consultar', url_for('exh_exhortos.get_from_externo', exh_exhorto_id=exh_exhorto.id), 'GetFromExterno', 'mdi:download', "¿Quiere consultar desde el PJ?") }}
            {% if exh_exhorto.estatus == 'A' %}{{ topbar.button_delete('Eliminar', url_for('exh_exhortos.delete', exh_exhorto_id=exh_exhorto.id)) }}{% endif %}
            {% if exh_exhorto.estatus == 'B' %}{{ topbar.button_recover('Recuperar', url_for('exh_exhortos.recover', exh_exhorto_id=exh_exhorto.id)) }}{% endif %}
        {% endif %}
    {% endcall %}
{% endblock %}

{% block content %}
    {% call detail.card("Datos del exhorto", estatus=exh_exhorto.estatus) %}
        <div class="row">
            <div class="col-md-6">
                {{ detail.label_value('Exhorto Origen ID', exh_exhorto.exhorto_origen_id) }}
                {% if current_user.can_view('MUNICIPIOS') %}
                    {{ detail.label_value('Origen', exh_exhorto.municipio_origen.nombre + ', ' + exh_exhorto.municipio_origen.estado.nombre, url_for('municipios.detail', municipio_id=exh_exhorto.municipio_origen_id)) }}
                {% else %}
                    {{ detail.label_value('Origen', exh_exhorto.municipio_origen.nombre + ', ' + exh_exhorto.municipio_origen.estado.nombre) }}
                {% endif %}
                {{ detail.label_value('Juzgado Origen ID', exh_exhorto.juzgado_origen_id) }}
                {{ detail.label_value('Juzgado Origen', exh_exhorto.juzgado_origen_nombre) }}
                {{ detail.label_value('No. Expediente', exh_exhorto.numero_expediente_origen) }}
                {{ detail.label_value('No. Oficio', exh_exhorto.numero_oficio_origen) }}
                {{ detail.label_value('Tipo de Juicio', exh_exhorto.tipo_juicio_asunto_delitos) }}
                {{ detail.label_value('Juez Exhortante', exh_exhorto.juez_exhortante) }}
                {{ detail.label_value('Fojas', exh_exhorto.fojas) }}
                {{ detail.label_value('Días en responder', exh_exhorto.dias_responder) }}
                {{ detail.label_value('Tipo de diligenciación', exh_exhorto.tipo_diligenciacion_nombre) }}
                {{ detail.label_value('Fecha de origen', moment(exh_exhorto.fecha_origen).format('llll')) }}
                {{ detail.label_value('Observaciones', exh_exhorto.observaciones) }}
            </div>
            <div class="col-md-6">
                {{ detail.label_value('Materia clave', exh_exhorto.materia_clave) }}
                {{ detail.label_value('Materia nombre', exh_exhorto.materia_nombre) }}
                {% if municipio_destino %}
                    {% if current_user.can_view('MUNICIPIOS') %}
                        {{ detail.label_value('Destino', municipio_destino.nombre + ', ' + municipio_destino.estado.nombre, url_for('municipios.detail', municipio_id=municipio_destino.id)) }}
                    {% else %}
                        {{ detail.label_value('Destino', municipio_destino.nombre + ', ' + municipio_destino.estado.nombre) }}
                    {% endif %}
                {% else %}
                    {{ detail.label_value('Municipio Destino', 'NO DEFINIDO') }}
                {% endif %}
                {{ detail.label_value('Área', exh_exhorto.exh_area.clave + ' - ' + exh_exhorto.exh_area.nombre, url_for("exh_areas.detail", exh_area_id=exh_exhorto.exh_area.id)) }}
                {{ detail.label_value('Remitente', exh_exhorto.remitente) }}
                {{ detail.label_value('Autoridad', exh_exhorto.autoridad.clave + ' - ' + exh_exhorto.autoridad.descripcion_corta, url_for("autoridades.detail", autoridad_id=exh_exhorto.autoridad.id )) }}
                {{ detail.label_value('Número de Exhorto', exh_exhorto.numero_exhorto) }}
                <div class="row">
                    <div class="col-md-3 text-end">Estado</div>
                    {% if exh_exhorto.estado == "RECIBIDO" %}
                        <div class="col-md-9"><span class="badge rounded-pill bg-primary"><span class="iconify" data-icon="mdi:inbox-arrow-down" style="font-size: 16px"></span> {{ exh_exhorto.estado }}</span></div>
                    {% elif exh_exhorto.estado == "TRANSFIRIENDO" %}
                        <div class="col-md-9"><span class="badge rounded-pill bg-primary"><span class="iconify" data-icon="mdi:email-arrow-right" style="font-size: 16px"></span> {{ exh_exhorto.estado }}</span></div>
                    {% elif exh_exhorto.estado == "PROCESANDO" %}
                        <div class="col-md-9"><span class="badge rounded-pill bg-warning text-dark"><span class="iconify" data-icon="mdi:sync" style="font-size: 16px"></span> {{ exh_exhorto.estado }}</span></div>
                    {% elif exh_exhorto.estado == "RECHAZADO" %}
                        <div class="col-md-9"><span class="badge rounded-pill bg-danger"><span class="iconify" data-icon="mdi:hand-back-left" style="font-size: 16px"></span> {{ exh_exhorto.estado }}</span></div>
                    {% elif exh_exhorto.estado == "DILIGENCIADO" %}
                        <div class="col-md-9"><span class="badge rounded-pill bg-primary"><span class="iconify" data-icon="mdi:truck-delivery" style="font-size: 16px"></span> {{ exh_exhorto.estado }}</span></div>
                    {% elif exh_exhorto.estado == "CONTESTADO" %}
                        <div class="col-md-9"><span class="badge rounded-pill bg-success"><span class="iconify" data-icon="mdi:check-circle" style="font-size: 16px"></span> {{ exh_exhorto.estado }}</span></div>
                    {% elif exh_exhorto.estado == "PENDIENTE" %}
                        <div class="col-md-9"><span class="badge rounded-pill bg-warning text-dark"><span class="iconify" data-icon="mdi:note-edit" style="font-size: 16px"></span> {{ exh_exhorto.estado }}</span></div>
                    {% elif exh_exhorto.estado == "CANCELADO" %}
                        <div class="col-md-9"><span class="badge rounded-pill bg-secondary"><span class="iconify" data-icon="mdi:close-circle" style="font-size: 16px"></span> {{ exh_exhorto.estado }}</span></div>
                    {% elif exh_exhorto.estado == "POR ENVIAR" %}
                        <div class="col-md-9"><span class="badge rounded-pill bg-warning text-dark"><span class="iconify" data-icon="mdi:package-up" style="font-size: 16px"></span> {{ exh_exhorto.estado }}</span></div>
                    {% elif exh_exhorto.estado == "INTENTOS AGOTADOS" %}
                        <div class="col-md-9"><span class="badge rounded-pill bg-danger"><span class="iconify" data-icon="mdi:alert-decagram" style="font-size: 16px"></span> {{ exh_exhorto.estado }}</span></div>
                    {% elif exh_exhorto.estado == "RECIBIDO CON EXITO" %}
                        <div class="col-md-9"><span class="badge rounded-pill bg-primary"><span class="iconify" data-icon="mdi:briefcase-check" style="font-size: 16px"></span> {{ exh_exhorto.estado }}</span></div>
                    {% elif exh_exhorto.estado == "NO FUE RESPONDIDO" %}
                        <div class="col-md-9"><span class="badge rounded-pill bg-danger"><span class="iconify" data-icon="mdi:cancel" style="font-size: 16px"></span> {{ exh_exhorto.estado }}</span></div>
                    {% elif exh_exhorto.estado == "RESPONDIDO" %}
                        <div class="col-md-9"><span class="badge rounded-pill bg-success"><span class="iconify" data-icon="mdi:crown-circle" style="font-size: 16px"></span> {{ exh_exhorto.estado }}</span></div>
                    {% endif %}
                </div>
            </div>
        </div>
        <!-- Botones de acción en diferentes estados -->
        {% if exh_exhorto.estado == 'PENDIENTE' %}
            <div class="row text-center">
                <div class="col-md-6 d-grid gap-2">
                    <a class="btn btn-lg btn-danger" href="javascript:void(0)" onclick="showModalcancelar_btn('{{url_for('exh_exhortos.cancel', exh_exhorto_id=exh_exhorto.id)}}', '¿Desea cancelar el exhorto?');">
                        <span class='iconify' data-icon='mdi:cancel'></span> Cancelar
                    </a>
                </div>
                <div class="col-md-6 d-grid gap-2">
                    <a class="btn btn-lg btn-primary" href="javascript:void(0)" onclick="showModalenviar_btn('{{url_for('exh_exhortos.send', exh_exhorto_id=exh_exhorto.id)}}', '¿Está seguro de enviar el exhorto? Porque una vez enviado ya no podrá ni editarlo ni cancelarlo.');">
                        <span class='iconify' data-icon='mdi:send'></span> Enviar
                    </a>
                </div>
            </div>
            <div class="row text-center mt-2">
                <div class="col-md-6 d-grid gap-2">
                </div>
                <div class="col-md-6 d-grid gap-2">
                    <a class="btn btn-lg btn-secondary" href="javascript:void(0)" onclick="showModalenviar_btn('{{url_for('exh_exhortos.send_manually', exh_exhorto_id=exh_exhorto.id)}}', '¿Está seguro de enviar el exhorto? Porque una vez enviado ya no podrá ni editarlo ni cancelarlo.');">
                        <span class='iconify' data-icon='mdi:send'></span> Enviar Manualmente
                    </a>
                </div>
            </div>
        {% endif %}
        {% if exh_exhorto.estado == "RECIBIDO CON EXITO" %}
            <div class="row text-center">
                <div class="col-md-6 d-grid gap-2">
                </div>
                <div class="col-md-6 d-grid gap-2">
                    <a class="btn btn-lg btn-secondary" href="{{url_for('exh_exhortos.recibe_response_manually', exh_exhorto_id=exh_exhorto.id)}}">
                        <span class='iconify' data-icon='mdi:inbox-arrow-down'></span> Recibir respuesta manualmente
                    </a>
                </div>
            </div>
        {% endif %}
        {% if exh_exhorto.estado == "INTENTOS AGOTADOS" %}
            <div class="row text-center">
                <div class="col-md-6 d-grid gap-2">
                </div>
                <div class="col-md-6 d-grid gap-2">
                    <a class="btn btn-lg btn-primary" href="javascript:void(0)" onclick="showModalregresar_enviar_btn('{{url_for('exh_exhortos.back_to_by_send', exh_exhorto_id=exh_exhorto.id)}}', '¿Está seguro de querer reiniciar los intentos de envío y regresar el exhorto al estado POR ENVIAR?');">
                        <span class='iconify' data-icon='mdi:refresh'></span> Reiniciar Intentos
                    </a>
                </div>
            </div>
        {% endif %}
        {% if exh_exhorto.estado == "RECHAZADO" %}
            <div class="row text-center">
                <div class="col-md-6 d-grid gap-2">
                </div>
                <div class="col-md-6 d-grid gap-2">
                    <a class="btn btn-lg btn-warning text-dark" href="javascript:void(0)" onclick="showModalregresar_pendiente_btn('{{url_for('exh_exhortos.back_to_pending', exh_exhorto_id=exh_exhorto.id)}}', '¿Está seguro de querer regresar el estado a PENDIENTE?');">
                        <span class='iconify' data-icon='mdi:refresh'></span> Regresar a Pendiente
                    </a>
                </div>
            </div>
        {% endif %}
        {% if exh_exhorto.estado == "RECIBIDO" %}
            <div class="row text-center">
                <div class="col-md-6 d-grid gap-2">
                </div>
                <div class="col-md-6 d-grid gap-2">
                    <a class="btn btn-lg btn-primary" href="{{url_for('exh_exhortos.transfer', exh_exhorto_id=exh_exhorto.id)}}">
                        <span class='iconify' data-icon='mdi:swap-horizontal'></span> Transferir a Juzgado
                    </a>
                </div>
            </div>
        {% endif %}
        {% if exh_exhorto.estado == "TRANSFIRIENDO" %}
            <div class="row text-center">
                <div class="col-md-6 d-grid gap-2">
                </div>
                <div class="col-md-6 d-grid gap-2">
                    <a class="btn btn-lg btn-warning text-dark" href="{{url_for('exh_exhortos.process', exh_exhorto_id=exh_exhorto.id)}}">
                        <span class='iconify' data-icon='mdi:recycle'></span> Procesar
                    </a>
                </div>
            </div>
        {% endif %}
        {% if exh_exhorto.estado == "PROCESANDO" %}
            <div class="row text-center">
                <div class="col-md-6 d-grid gap-2">
                    <a class="btn btn-lg btn-danger" href="{{url_for('exh_exhortos.refuse', exh_exhorto_id=exh_exhorto.id)}}">
                        <span class='iconify' data-icon='mdi:hand-back-left'></span> Rechazar
                    </a>
                </div>
                <div class="col-md-6 d-grid gap-2">
                    <a class="btn btn-lg btn-primary" href="{{url_for('exh_exhortos.diligence', exh_exhorto_id=exh_exhorto.id)}}">
                        <span class='iconify' data-icon='mdi:truck-delivery'></span> Diligenciar
                    </a>
                </div>
            </div>
        {% endif %}
        {% if exh_exhorto.estado == "DILIGENCIADO" %}
            <div class="row text-center">
                <div class="col-md-6 d-grid gap-2">
                </div>
                <div class="col-md-6 d-grid gap-2">
                    <a class="btn btn-lg btn-success" href="{{url_for('exh_exhortos.response', exh_exhorto_id=exh_exhorto.id)}}">
                        <span class='iconify' data-icon='mdi:check-circle'></span> Contestar
                    </a>
                </div>
            </div>
        {% endif %}
    {% endcall %}
    <!-- Tabla de Partes -->
    {% call detail.card("Partes") %}
        <table id="exh_exhortos_partes_datatable" class="table display nowrap" style="width:100%">
            <thead>
                <tr>
                    <th>Nombre Completo</th>
                    <th>Género</th>
                    <th>Es Persona Moral</th>
                    <th>Tipo Parte</th>
                </tr>
            </thead>
        </table>
        {% if exh_exhorto.estado == 'PENDIENTE' %}
            {% if current_user.can_insert('EXH EXHORTOS PARTES') %}
                <a class="btn btn-primary" href="{{url_for('exh_exhortos_partes.new_with_exh_exhorto', exh_exhorto_id=exh_exhorto.id)}}">Agregar</a>
            {% endif %}
        {% endif %}
    {% endcall %}
    <!-- Tabla de Archivos -->
    {% call detail.card("Archivos") %}
        <table id="exh_exhortos_archivos_datatable" class="table display nowrap" style="width:100%">
            <thead>
                <tr>
                    <th>Archivo</th>
                    <th>Descargar</th>
                    <th>Tipo Documento</th>
                    <th>Estado</th>
                    <th>Recepción</th>
                    <th>Tamaño</th>
                </tr>
            </thead>
        </table>
        {% if exh_exhorto.estado == 'PENDIENTE' %}
            {% if current_user.can_insert('EXH EXHORTOS ARCHIVOS') %}
                <a class="btn btn-primary" href="{{url_for('exh_exhortos_archivos.new_with_exh_exhorto', exh_exhorto_id=exh_exhorto.id)}}">Agregar</a>
            {% endif %}
        {% endif %}
    {% endcall %}
    <!-- Acuse de recibido -->
    {% if exh_exhorto.acuse_fecha_hora_recepcion %}
        <div class="card bg-warning mb-3">
            <div class="card-header">Acuse de recepción</div>
            <div class="card-body bg-light">
                {{ detail.label_value('Folio Seguimiento', exh_exhorto.folio_seguimiento) }}
                {{ detail.label_value('Fecha Hora Recepción', moment(exh_exhorto.acuse_fecha_hora_recepcion).format('llll')) }}
                {{ detail.label_value('Municipio Área Recibida Id', exh_exhorto.acuse_municipio_area_recibe_id) }}
                {{ detail.label_value('Área Recibida', exh_exhorto.acuse_area_recibe_id + ': ' + exh_exhorto.acuse_area_recibe_nombre) }}
                {{ detail.label_value('URL Info', exh_exhorto.acuse_url_info, exh_exhorto.acuse_url_info) }}
                <div class="row">
                    <div class="col">
                        {{ detail.button_md(label='Acuse', url=url_for('exh_exhortos.acuse_reception', id_hashed=exh_exhorto.encode_id()), icon='mdi:printer', target='_blank', color_class='btn-outline-secondary') }}
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
    <!-- Acuse de respuesta -->
    {% if exh_exhorto.respuesta_fecha_hora_recepcion %}
        <div class="card bg-success mb-3">
            <div class="card-header text-light">Acuse de respuesta</div>
            <div class="card-body bg-light">
                {{ detail.label_value('Respuesta Origen Id', exh_exhorto.respuesta_respuesta_origen_id) }}
                {{ detail.label_value('Fecha Hora de Recepción', moment(exh_exhorto.respuesta_fecha_hora_recepcion).format('llll')) }}
                {{ detail.label_value('Observaciones', exh_exhorto.respuesta_observaciones) }}
                <div class="row">
                    <div class="col">
                        {{ detail.button_md(label='Acuse', url=url_for('exh_exhortos.acuse_reponse', id_hashed=exh_exhorto.encode_id()), icon='mdi:printer', target='_blank', color_class='btn-outline-secondary') }}
                    </div>
                </div>
            </div>
        </div>
        <!-- Archvivos de respuesta -->
        <div class="card bg-success mb-3">
            <div class="card-header text-light">Archivos de respuesta</div>
            <div class="card-body bg-light">
                <table id="exh_exhortos_archivos_respuesta_datatable" class="table display nowrap" style="width:100%">
                    <thead>
                        <tr>
                            <th>Archivo</th>
                            <th>Descargar</th>
                            <th>Tipo Documento</th>
                            <th>Estado</th>
                            <th>Recepción</th>
                            <th>Tamaño</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    {% endif %}
    <!-- Archivos de respuesta como Videos -->
    {% if exh_exhorto.estado in ('DILIGENCIADO', 'CONTESTADO') %}
        <div class="card bg-primary mb-3">
            <div class="card-header text-light">Archivos de respuesta videos</div>
            <div class="card-body bg-light">
                <table id="exh_exhortos_respuesta_videos_datatable" class="table display nowrap" style="width:100%">
                    <thead>
                        <tr>
                            <th>Título</th>
                            <th>Descripción</th>
                        </tr>
                    </thead>
                </table>
                {% if exh_exhorto.estado == 'DILIGENCIADO' and current_user.can_insert('EXH EXHORTOS VIDEOS') %}
                    <a class="btn btn-primary" href="{{url_for('exh_exhortos_videos.new_with_exh_exhorto', exh_exhorto_id=exh_exhorto.id)}}">Agregar</a>
                {% endif %}
            </div>
        </div>
    {% endif %}
{% endblock %}

{% block custom_javascript %}
    {% if current_user.can_admin('EXH EXHORTOS') %}
        {{ modals.custom_javascript('Consultar', '', 'GetFromExterno') }}
        {{ modals.custom_javascript('Enviar', '', 'SendToExterno') }}
        {% if exh_exhorto.estatus == 'A' %}{{ modals.custom_javascript_delete('Eliminar', '¿Eliminar este exhorto?') }}{% endif %}
        {% if exh_exhorto.estatus == 'B' %}{{ modals.custom_javascript_recover('Recuperar', '¿Recuperar este exhorto?') }}{% endif %}
    {% endif %}
    <script src="/static/js/datatables-constructor.js"></script>
    <script src="/static/js/datatables-filtros.js"></script>
    <script>
        const constructorDataTable = new ConfigDataTable( '{{ csrf_token() }}' );
    </script>
    <!-- Tabla de Partes -->
    <script>
        // DataTable Partes
        let configDTPartes = constructorDataTable.config();
        configDTPartes['ajax']['url'] = '/exh_exhortos_partes/datatable_json';
        configDTPartes['ajax']['data'] = {'estatus':'A', 'exh_exhorto_id':{{exh_exhorto.id}}};
        configDTPartes['columns'] = [
            { data: 'detalle' },
            { data: 'genero' },
            { data: 'es_persona_moral' },
            { data: 'tipo_parte' },
        ];
        configDTPartes['columnDefs'] = [
            {
                targets: 0, // detalle
                data: null,
                render: function(data, type, row, meta) {
                    return '<a href="' + data.url + '">' + data.nombre + '</a>';
                }
            },
            {
                targets: 1, // genero
                data: null,
                render: function(data, type, row, meta) {
                    switch (data) {
                        case "M": return "<span title='Masculino'>M <span class='iconify' data-icon='mdi:gender-male'></span></span>";
                        case "F": return "<span title='Femenino'>F <span class='iconify' data-icon='mdi:gender-female'></span></span>";
                    }
                    return "-";
                }
            },
            {
                targets: 2, // es_persona_moral
                data: null,
                render: function(data, type, row, meta) {
                    if (data == true) {
                        return "SÍ";
                    }
                    return "-";
                }
            }
        ];
        // Filtros Exhortos Partes
        const filtrosPartes = new FiltrosDataTable('#exh_exhortos_partes_datatable', configDTPartes);
        filtrosPartes.precargar();
    </script>
    <!-- Tabla de Archivos -->
    <script>
        // DataTable Archivos
        let configDTArchivos = constructorDataTable.config();
        configDTArchivos['ajax']['url'] = '/exh_exhortos_archivos/datatable_json';
        configDTArchivos['ajax']['data'] = {'estatus':'A', 'exh_exhorto_id':{{exh_exhorto.id}}};
        configDTArchivos['columns'] = [
            { data: 'detalle' },
            { data: 'descargar_pdf' },
            { data: 'tipo_documento_nombre' },
            { data: 'estado' },
            { data: 'fecha_hora_recepcion' },
            { data: 'tamano' }
        ];
        configDTArchivos['columnDefs'] = [
            {
                targets: 0, // detalle
                data: null,
                render: function(data, type, row, meta) {
                    if (data.url != '') {
                        return '<a href="' + data.url + '">' + data.nombre_archivo + '</a>';
                    } else {
                        return data.nombre_archivo;
                    }
                }
            },
            {
                targets: 1, // descargar_pdf
                data: null,
                render: function(data, type, row, meta) {
                    return '<a href="' + data.url + '" download="' + data.nombre_archivo + '"><span class="iconify" data-icon="mdi:file-pdf-box" style="font-size:2.0rem"></span></a>';
                }
            }
        ];
        // Filtros Exhortos Archivos
        const filtrosArchivos = new FiltrosDataTable('#exh_exhortos_archivos_datatable', configDTArchivos);
