{% extends 'layouts/app.jinja2' %}
{% import 'macros/list.jinja2' as list %}
{% import 'macros/topbar.jinja2' as topbar %}

{% block title %}{{ titulo }}{% endblock %}

{% block custom_head %}
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
{% endblock %}

{% block topbar_actions %}
    {% call topbar.page_buttons(titulo) %}
    {% endcall %}
{% endblock %}

{% block content %}
    {% if mensaje_curp %}
        {% call list.card() %}
            <p class="lead">Atenci√≥n {{ usuario.nombre }}.</p>
            <p class="lead">{{ mensaje_curp }}</p>
        {% endcall %}
    {% else %}
        {% call list.card() %}
            {% if not usuario_id %}
            <!-- Filtros UsuarioNomina -->
            <div class="row">
                <div class="col">
                    <form class="row g-1 mb-3" id="filtradorForm" onsubmit="filtrosUsuarioNomina.buscar(); return false;">
                        <div class="col-4">
                            <div class="form-floating">
                                <input id="filtroClave" type="text" class="form-control" aria-label="Clave"
                                       style="text-transform: uppercase;">
                                <label for="filtroClave">Clave</label>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-floating">
                                <input id="filtroNombre" type="text" class="form-control" aria-label="Nombre"
                                       style="text-transform: uppercase;">
                                <label for="filtroNombre">Nombre</label>
                            </div>
                        </div>
                        <div class="col-2 text-end">
                            <button title="Buscar" class="btn btn-primary btn-lg"
                                    onclick="filtrosUsuarioNomina.buscar(); return false;" id="button-buscar"><span
                                    class="iconify" data-icon="mdi:magnify"></span></button>
                            <button title="Limpiar" class="btn btn-warning btn-lg" type="reset"
                                    onclick="filtrosUsuarioNomina.limpiar();" id="button-limpiar"><span class="iconify"
                                                                                                  data-icon="mdi:broom"></span>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            {% endif %}
            <!-- DataTable UsuarioNomina -->
            <table id="usuarios_nominas_datatable" class="table display nowrap"
                   style="width:100%">
                <thead>
                <tr>
                    <th>Fecha - Quincena</th>
                    <th>Descargar PDF</th>
                    <th>Descargar XML</th>
                </tr>
                </thead>
            </table>
        {% endcall %}
    {% endif %}
{% endblock %}

{% block custom_javascript %}
    <script src="/static/js/datatables-constructor.js"></script>
    <script src="/static/js/datatables-filtros.js"></script>
    <script>
        // DataTable Municipios
        const constructorDataTable = new ConfigDataTable('{{ csrf_token() }}');
        let configDataTable = constructorDataTable.config();
        configDataTable['ajax']['url'] = '/usuarios_nominas/datatable_json';
        configDataTable['ajax']['data'] = {{ filtros }};
        configDataTable['columns'] = [
            {data: 'detalle'},
            {data: 'pdf'},
            {data: 'xml'}
        ];
        configDataTable['columnDefs'] = [
            {
                targets: 0, // detalle
                data: null,
                render: function(data, type, row, meta) {
                    return data.fecha + '<br/><strong>' + data.descripcion + '</strong>';
                }
            },{
                targets: 1, // pdf
                data: null,
                render: function(data, type, row, meta) {
                    return '<a href="' + data.url_pdf + '" download="' + data.archivo_pdf + '"><i class="fs-2 bi bi-filetype-pdf" style="color: red;"></i></a>';
                }
            },
            {
                targets: 2, // xml
                data: null,
                render: function(data, type, row, meta) {
                    return '<a href="' + data.url_xml + '" download="' + data.archivo_xml + '"><i class="fs-2 bi bi-filetype-xml" style="color: teal;"></i></a>';
                }
            }
        ];
        // Filtros UsuarioNomina
        const filtrosUsuarioNomina = new FiltrosDataTable('#usuarios_nominas_datatable', configDataTable);
        filtrosUsuarioNomina.agregarInput('filtroClave', 'clave');
        filtrosUsuarioNomina.agregarInput('filtroNombre', 'nombre');
        filtrosUsuarioNomina.precargar();
    </script>
    <!-- Script cambiar los enlaces 'download' y mostrar mensaje de error si la respuesta es 404 -->
    <script>
        document.addEventListener('click', function (event) {
            if (event.target.tagName === 'A' && event.target.hasAttribute('download')) {
                event.preventDefault();
                fetch(event.target.href)
                    .then(response => {
                        if (response.status === 404) {
                            alert('El archivo solicitado no existe.');
                        } else {
                            return response.blob();
                        }
                    })
                    .then(blob => {
                        const url = URL.createObjectURL(blob);
                        const a = document.createElement('a');
                        a.href = url;
                        a.download = event.target.download;
                        document.body.appendChild(a);
                        a.click();
                        window.URL.revokeObjectURL(url);
                    });
            }
        });
    </script>
{% endblock %}
