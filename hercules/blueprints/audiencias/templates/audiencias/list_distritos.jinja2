{% extends 'layouts/app.jinja2' %}
{% import 'macros/detail.jinja2' as detail %}
{% import 'macros/modals.jinja2' as modals %}
{% import 'macros/topbar.jinja2' as topbar %}

{% block title %}Audiencias {{ audiencia.autoridad }}{% endblock %}

{% block topbar_actions %}
    {% call topbar.page_buttons('Audiencias ' + audiencia.autoridad) %}
        {{ topbar.button_previous('Agenda de Audiencias', url_for('audiencias.list_active')) }}
        {% if current_user.can_edit('AUDIENCIAS') %}
            {{ topbar.button_edit('Editar', url_for('audiencias.edit', audiencia_id=audiencia.id)) }}
        {% endif %}
        {% if current_user.can_admin('AUDIENCIAS') %}
            {% if audiencia.estatus == 'A' %}{{ topbar.button_delete('Eliminar', url_for('audiencias.delete', audiencia_id=audiencia.id)) }}{% endif %}
            {% if audiencia.estatus == 'B' %}{{ topbar.button_recover('Recuperar', url_for('audiencias.recover', audiencia_id=audiencia.id)) }}{% endif %}
        {% endif %}
    {% endcall %}
{% endblock %}

{% block content %}
    {% call detail.card(estatus=audiencia.estatus) %}
        {{ detail.label_value_big('Nombre o Descripción', audiencia.autoridad) }}
        {{ detail.label_value('Columna 1', audiencia.columna_1) }}
        {{ detail.label_value('Columna 2', audiencia.columna_2) }}
        {{ detail.label_value('Creado', moment(audiencia.creado, local=True).format('llll')) }}
    {% endcall %}
{% endblock %}

{% block custom_javascript %}
    {% if current_user.can_admin('AUDIENCIAS') %}
        {% if audiencia.estatus == 'A' %}{{ modals.custom_javascript_delete('Eliminar', '¿Eliminar a ' + audiencia.autoridad + '?') }}{% endif %}
        {% if audiencia.estatus == 'B' %}{{ modals.custom_javascript_recover('Recuperar', '¿Recuperar a ' + audiencia.autoridad + '?') }}{% endif %}
    {% endif %}
    {{ detail.moment_js(moment) }}
{% endblock %}
