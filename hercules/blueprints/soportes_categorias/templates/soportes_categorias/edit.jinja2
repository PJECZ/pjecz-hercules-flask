{% extends 'layouts/app.jinja2' %}
{% import 'macros/form.jinja2' as f with context %}
{% import 'macros/topbar.jinja2' as topbar %}

{% block title %}Editar {{ categoria.nombre }}{% endblock %}

{% block topbar_actions %}
    {{ topbar.page('Editar ' + categoria.nombre) }}
{% endblock %}

{% block content %}
    {% call f.card() %}
        {% set form_kwargs = {'soporte_categoria_id': categoria.id} %}
        {% call f.form_tag('soportes_categorias.edit', fid='categoria_form', **form_kwargs) %}
            {% call f.form_group(form.nombre) %}{% endcall %}
            {% call f.form_group(form.rol) %}{% endcall %}
            {% call f.form_group(form.instrucciones, rows=7) %}{% endcall %}
            {% call f.form_group(form.departamento) %}{% endcall %}
            {% call f.form_group(form.guardar) %}{% endcall %}
        {% endcall %}
    {% endcall %}
{% endblock %}
