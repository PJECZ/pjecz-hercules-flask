{% extends 'layouts/app.jinja2' %}
{% import 'macros/form.jinja2' as f with context %}
{% import 'macros/topbar.jinja2' as topbar %}

{% block title %}Editar Exhorto Área {{ exh_area.clave }}{% endblock %}

{% block topbar_actions %}
    {% call topbar.page_buttons('Editar Exhorto Área: ' + exh_area.clave) %}
    {% endcall %}
{% endblock %}

{% block content %}
    {% call f.card() %}
        {% set form_kwargs = {'exh_area_id': exh_area.id} %}
        {% call f.form_tag('exh_areas.edit', fid='exh_area_form', **form_kwargs) %}
            {% call f.form_group(form.clave) %}{% endcall %}
            {% call f.form_group(form.nombre) %}{% endcall %}
            {% call f.form_group(form.guardar) %}{% endcall %}
        {% endcall %}
    {% endcall %}
{% endblock %}
