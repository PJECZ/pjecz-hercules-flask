{% extends 'layouts/app.jinja2' %}
{% import 'macros/card.jinja2' as card %}
{% import 'macros/topbar.jinja2' as topbar %}

{% block title %}{{ titulo }}{% endblock %}

{% block topbar_actions %}
    {% call topbar.page_buttons(titulo) %}
        {{ topbar.button_list_active('Listado', url_for('cid_formatos.list_active')) }}
    {% endcall %}
{% endblock %}

{% block content %}
    {% if mostrar_boton_exportar_lista_maestra_xlsx %}
        {% call card.card('Exportar Lista Maestra a XLSX') %}
            {% call card.card_body() %}
                <a href="{{ url_for('cid_formatos.exportar_xlsx') }}" class="btn btn-outline-success">
                    <span class="iconify" data-icon="mdi:google-spreadsheet"></span>
                    Exportar XLSX
                </a>
            {% endcall %}
        {% endcall %}
    {% endif %}
{% endblock %}

{% block custom_javascript %}
{% endblock %}
