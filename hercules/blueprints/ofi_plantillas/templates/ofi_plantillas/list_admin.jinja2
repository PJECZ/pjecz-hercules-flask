{% extends 'layouts/app.jinja2' %}
{% import 'macros/list.jinja2' as list %}
{% import 'macros/topbar.jinja2' as topbar %}

{% block title %}{{ titulo }}{% endblock %}

{% block topbar_actions %}
    {% call topbar.page_buttons(titulo) %}
        {% if current_user.can_view('OFI DOCUMENTOS') %}
            {{ topbar.button('Mi Bandeja de Entrada', url_for('ofi_documentos.list_active_mi_bandeja_entrada'), "mdi:inbox-multiple") }}
            {{ topbar.button('Mis Oficios', url_for('ofi_documentos.list_active_mis_oficios'), "mdi:file-sign") }}
            {{ topbar.button('Mi Autoridad', url_for('ofi_documentos.list_active_mi_autoridad'), "mdi:scale-balance") }}
        {% endif %}
        {% if current_user.can_admin('OFI PLANTILLAS') %}
            {% if estatus == 'A' %}{{ topbar.button_list_inactive('Inactivos', url_for('ofi_plantillas.list_inactive')) }}{% endif %}
            {% if estatus == 'B' %}{{ topbar.button_list_active('Activos', url_for('ofi_plantillas.list_active')) }}{% endif %}
        {% endif %}
        {% if current_user.can_insert('OFI PLANTILLAS') %}
            {{ topbar.button_new('Nueva Plantilla', url_for('ofi_plantillas.new')) }}
        {% endif %}
    {% endcall %}
{% endblock %}

{% block content %}
    {% call list.card() %}
        <!-- Filtros OfiPlantillas -->
        <div class="row">
            <div class="col">
                <form class="row g-1 mb-3" id="filtradorForm" onsubmit="filtrosPlantillas.buscar(); return false;">
                    <div class="col-6">
                        <div class="form-floating">
                            <input id="filtroDescripcion" type="text" class="form-control" aria-label="Descripción" style="text-transform: uppercase;">
                            <label for="filtroDescripcion">Descripción</label>
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="form-floating">
                            <input id="filtroPropietario" type="text" class="form-control" aria-label="Propietario" style="text-transform: lowercase;">
                            <label for="filtroPropietario">Propietario</label>
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="form-floating">
                            <input id="filtroAutoridad" type="text" class="form-control" aria-label="Autoridad" style="text-transform: uppercase;">
                            <label for="filtroAutoridad">Autoridad</label>
                        </div>
                    </div>
                    <div class="col-2 text-end">
                        <button title="Buscar" class="btn btn-primary btn-lg" onclick="filtrosPlantillas.buscar(); return false;" id="button-buscar"><span class="iconify" data-icon="mdi:magnify"></span></button>
                        <button title="Limpiar" class="btn btn-warning btn-lg" type="reset" onclick="filtrosPlantillas.limpiar();" id="button-limpiar"><span class="iconify" data-icon="mdi:broom"></span></button>
                    </div>
                </form>
            </div>
        </div>
        <!-- DataTable OfiPlantillas -->
        <table id="ofi_plantillas_datatable" class="table {% if estatus == 'B'%}table-dark{% endif %} display nowrap" style="width:100%">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Descripción</th>
                    <th>Propietario</th>
                    <th>Autoridad</th>
                    <th>Archivada</th>
                    <th>Compartida</th>
                </tr>
            </thead>
        </table>
    {% endcall %}
{% endblock %}

{% block custom_javascript %}
    <script src="/static/js/datatables-constructor.js"></script>
    <script src="/static/js/datatables-filtros.js"></script>
    <script>
        // DataTable OfiPlantillas
        const constructorDataTable = new ConfigDataTable( '{{ csrf_token() }}' );
        let configDataTable = constructorDataTable.config();
        configDataTable['ajax']['url'] = '/ofi_plantillas/datatable_json';
        configDataTable['ajax']['data'] = {{ filtros }};
        configDataTable['columns'] = [
            { data: 'detalle' },
            { data: 'descripcion' },
            { data: 'propietario' },
            { data: 'autoridad' },
            { data: 'toggle_esta_archivado' },
            { data: 'toggle_esta_compartida' }
        ];
        configDataTable['columnDefs'] = [
            {
                targets: 0, // detalle
                data: null,
                render: function(data, type, row, meta) {
                    let html = '';
                    // Crear un nuevo oficio con esta plantilla
                    if (data.url_nuevo !== '') {
                        html += '<a class="btn btn-outline-primary btn-sm" href="' + data.url_nuevo + '"><span class="iconify" data-icon="mdi:content-copy"></span></a> ';
                    }
                    // Detalle de la plantilla
                    html += '<a class="btn btn-outline-primary btn-sm" href="' + data.url + '"><span class="iconify" data-icon="mdi:eye"></span></a> ';
                    // Edicion de la plantilla
                    if (data.url_edicion !== '') {
                        html += '<a class="btn btn-outline-primary btn-sm" href="' + data.url_edicion + '"><span class="iconify" data-icon="mdi:pencil"></span></a> ';
                    }
                    return html;
                }
            },
            {
                targets: 1, // descripcion
                data: null,
                render: function(data, type, row, meta) {
                    if (data.length > 48)
                        return '<span title="' + data + '">' + data.substring(0, 48) + '…</span>';
                    return data;
                }
            },
            {
                targets: 2, // propietario
                data: null,
                render: function(data, type, row, meta) {
                    if (data.email.length > 16)
                        return '<span title="' + data.nombre + '"><a href="' + data.url + '">' + data.email.substring(0, 16) + '…</a></span>';
                    return data;
                }
            },
            {
                targets: 3, // autoridad
                data: null,
                render: function(data, type, row, meta) {
                    if (data.url == "" )
                        return '<span title="' + data.nombre + '">' + data.clave + '</span>';
                    return '<span title="' + data.nombre + '"><a href="' + data.url + '">' + data.clave + '</a></span>';
                }
            },
            {
                targets: 4, // toggle_esta_archivado
                data: null,
                render: function(data, type, row, meta) {
                    if (data.url === '') {
                        if (data.esta_archivado === true) {
                            return '<span class="iconify" data-icon="mdi:checkbox-marked"></span>';
                        } else {
                            return '<span class="iconify" data-icon="mdi:checkbox-blank-outline"></span>';
                        }
                    }
                    let toogleId = 'ofi_plantilla_esta_archivado_' + data.id;
                    let toogleOnClick = "toggleEstaArchivado('#" + toogleId + "', '" + data.url + "')";
                    if (data.esta_archivado === true) {
                        return '<button id="' + toogleId + '" type="button" class="btn btn-sm btn-outline-primary" onclick="' + toogleOnClick + '"><span class="iconify" data-icon="mdi:checkbox-marked"></span></button>';
                    } else {
                        return '<button id="' + toogleId + '" type="button" class="btn btn-sm btn-outline-secondary" onclick="' + toogleOnClick + '"><span class="iconify" data-icon="mdi:checkbox-blank-outline"></span></button>';
                    }
                }
            },
            {
                targets: 5, // toggle_esta_compartida
                data: null,
                render: function(data, type, row, meta) {
                    if (data.url === '') {
                        if (data.esta_compartida === true) {
                            return '<span class="iconify" data-icon="mdi:checkbox-marked"></span>';
                        } else {
                            return '<span class="iconify" data-icon="mdi:checkbox-blank-outline"></span>';
                        }
                    }
                    let toogleId = 'ofi_plantilla_esta_compartida_' + data.id;
                    let toogleOnClick = "toggleEstaCompartida('#" + toogleId + "', '" + data.url + "')";
                    if (data.esta_compartida === true) {
                        return '<button id="' + toogleId + '" type="button" class="btn btn-sm btn-outline-primary" onclick="' + toogleOnClick + '"><span class="iconify" data-icon="mdi:checkbox-marked"></span></button>';
                    } else {
                        return '<button id="' + toogleId + '" type="button" class="btn btn-sm btn-outline-secondary" onclick="' + toogleOnClick + '"><span class="iconify" data-icon="mdi:checkbox-blank-outline"></span></button>';
                    }
                }
            }
        ];
        // Colorear renglones
        configDataTable['rowCallback'] = function( row, data )  {
            if (data.autoridad.color_renglon)   {
                $(row).css("background-color", data.autoridad.color_renglon);
            }
        };
        // Filtros OfiPlantillas
        const filtrosPlantillas = new FiltrosDataTable('#ofi_plantillas_datatable', configDataTable);
        filtrosPlantillas.agregarInput('filtroDescripcion', 'descripcion');
        filtrosPlantillas.agregarInput('filtroPropietario', 'propietario');
        filtrosPlantillas.agregarInput('filtroAutoridad', 'autoridad');
        filtrosPlantillas.precargar();
        // Preparar headers para POST
        const myHeaders = new Headers();
        myHeaders.append("X-CSRF-TOKEN", "{{ csrf_token() }}");
        const myInit = {
            method: 'POST',
            headers: myHeaders,
            mode: 'cors',
            cache: 'default'
        };
        // Boton esta_archivado
        function toggleEstaArchivado(toggleId, url) {
            $(toggleId).prop("disabled", true); // Deshabilitar boton para evitar multiples clicks
            fetch(url, myInit)
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        if (data.esta_archivado) {
                            $(toggleId).removeClass('btn-outline-secondary');
                            $(toggleId).addClass('btn-outline-primary');
                            $(toggleId).html('<span class="iconify" data-icon="mdi:checkbox-marked"></span>'); // Icono toggle-switch
                        } else {
                            $(toggleId).removeClass('btn-outline-primary');
                            $(toggleId).addClass('btn-outline-secondary');
                            $(toggleId).html('<span class="iconify" data-icon="mdi:checkbox-blank-outline"></span>'); // Icono toggle-switch-off
                        }
                        console.log(data.message);
                    } else {
                        console.log(data.message);
                    }
                    $(toggleId).prop("disabled", false); // Habilitar boton
                })
                .catch(error => {
                    console.log(error);
                });
        }
        // Boton esta_compartida
        function toggleEstaCompartida(toggleId, url) {
            $(toggleId).prop("disabled", true); // Deshabilitar boton para evitar multiples clicks
            fetch(url, myInit)
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        if (data.esta_compartida) {
                            $(toggleId).removeClass('btn-outline-secondary');
                            $(toggleId).addClass('btn-outline-primary');
                            $(toggleId).html('<span class="iconify" data-icon="mdi:checkbox-marked"></span>'); // Icono toggle-switch
                        } else {
                            $(toggleId).removeClass('btn-outline-primary');
                            $(toggleId).addClass('btn-outline-secondary');
                            $(toggleId).html('<span class="iconify" data-icon="mdi:checkbox-blank-outline"></span>'); // Icono toggle-switch-off
                        }
                        console.log(data.message);
                    } else {
                        console.log(data.message);
                    }
                    $(toggleId).prop("disabled", false); // Habilitar boton
                })
                .catch(error => {
                    console.log(error);
                });
        }
    </script>
{% endblock %}
