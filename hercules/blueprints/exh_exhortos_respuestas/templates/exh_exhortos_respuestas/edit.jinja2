{% extends 'layouts/app.jinja2' %}
{% import 'macros/form.jinja2' as f with context %}
{% import 'macros/topbar.jinja2' as topbar %}

{% block title %}Editar Respuesta del Exhorto{% endblock %}

{% block topbar_actions %}
    {{ topbar.page('Editar Respuesta ' + exh_exhorto_respuesta.origen_id) }}
{% endblock %}

{% block content %}
    {% call f.card() %}
        {% set form_kwargs = {'exh_exhorto_respuesta_id': exh_exhorto_respuesta.id} %}
        {% call f.form_tag('exh_exhortos_respuestas.edit', fid='exh_exhorto_respuesta_form', **form_kwargs) %}
            {% call f.form_group(form.exh_exhorto_exhorto_origen_id, readonly=true) %}{% endcall %}
            {% call f.form_group(form.origen_id, readonly=true) %}{% endcall %}
            {% call f.form_group(form.municipio_turnado) %}{% endcall %}
            {% call f.form_group(form.area_turnado) %}{% endcall %}
            {% call f.form_group(form.numero_exhorto) %}{% endcall %}
            {% call f.form_group(form.tipo_diligenciado) %}{% endcall %}
            {% call f.form_group(form.observaciones) %}{% endcall %}
            {% call f.form_group(form.guardar) %}{% endcall %}
        {% endcall %}
    {% endcall %}
{% endblock %}
