{% extends 'layouts/app.jinja2' %}
{% import 'macros/form.jinja2' as f with context %}
{% import 'macros/topbar.jinja2' as topbar %}

{% block title %}Editar Pagina {{ web_pagina.clave }}{% endblock %}

{% block topbar_actions %}
    {% call topbar.page_buttons('Editar contenido de ' + web_pagina.clave) %}
        {{ topbar.button_cancel() }}
    {% endcall %}
{% endblock %}

{% block content %}
    {% call f.card() %}
        {% set form_kwargs = {'web_pagina_id': web_pagina.id} %}
        {% call f.form_tag('web_paginas.content', fid='web_pagina_form', **form_kwargs) %}
            {% call f.form_group(form.contenido) %}{% endcall %}
            {% call f.form_group(form.guardar) %}{% endcall %}
        {% endcall %}
    {% endcall %}
{% endblock %}

{% block custom_javascript %}
<script src="../../static/js/ckeditor5.js"></script>
{% endblock %}
