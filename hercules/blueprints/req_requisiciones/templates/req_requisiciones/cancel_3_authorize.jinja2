{% extends 'layouts/app.jinja2' %}
{% import 'macros/form.jinja2' as f with context %}
{% import 'macros/topbar.jinja2' as topbar %}

{% block title %}Cancelar Requisición Autorizado{% endblock %}

{% block topbar_actions %}
    {{ topbar.page('Cancelar Requisición Autorizada ' + req_requisicion.id | string) }}
{% endblock %}

{% block content %}
    {% call f.card(title='Cancelar Requisición Autorizada') %}
        {% set form_kwargs = {'req_requisicion_id': req_requisicion.id} %}
        {% call f.form_tag('req_requisiciones.cancel_3_authorize', fid='cancel_3_authorize_form', **form_kwargs) %}
            {% call f.form_group(form.autorizo_nombre, readonly=true) %}{% endcall %}
            {% call f.form_group(form.autorizo_puesto, readonly=true) %}{% endcall %}
            {% call f.form_group(form.autorizo_email, readonly=true) %}{% endcall %}
            {% call f.form_group(form.motivo) %}{% endcall %}
            {% call f.form_group(form.contrasena) %}{% endcall %}
            {% call f.form_group(form.cancelar) %}{% endcall %}
        {% endcall %}
    {% endcall %}
{% endblock %}
