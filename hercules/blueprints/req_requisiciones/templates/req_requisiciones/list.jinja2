{% extends 'layouts/app.jinja2' %}
{% import 'macros/list.jinja2' as list %}
{% import 'macros/topbar.jinja2' as topbar %}

{% block title %}{{ titulo }}{% endblock %}

{% block topbar_actions %}
    {% call topbar.page_buttons(titulo) %}
        {% if current_user.can_edit('REQ REQUISICIONES') %}
            {% if estatus == 'A' %}{{ topbar.button_list_inactive('Inactivas', url_for('req_requisiciones.list_inactive')) }}{%endif %}
            {% if estatus == 'B' %}{{ topbar.button_list_active('Activas', url_for('req_requisiciones.list_active')) }}{% endif %}
        {% endif %}
        {% if current_user.can_insert('REQ REQUISICIONES') %}
            {{ topbar.button_new('Nueva Requisicion', url_for('req_requisiciones.new')) }}
        {% endif %}
    {% endcall %}
{% endblock %}

{% block content %}
{% call list.card() %}

<!-- Formulario de filtros  -->
<div class="row">
    <div class="col">
        <form class="row g-1 mb-3" id="buscadorForm" onsubmit="filtros_requisiciones.buscar(); return false;">
            <div class="col-2">
                <div class="form-floating">
                    <input id="glosaInput" type="text" class="form-control" aria-label="glosa"
                        onchange="filtros_requisiciones.buscar(); return false;" style="text-transform: uppercase;">
                    <label for="glosaInput">Glosa</label>
                </div>
            </div>
            <div class="col-3">
                <div class="form-floating">
                    <input id="observacionesInput" type="text" class="form-control" aria-label="observaciones"
                        onchange="filtros_requisiciones.buscar(); return false;" style="text-transform: uppercase;">
                    <label for="observacionesInput">Observaciones</label>
                </div>
            </div>
            <div class="col-7 text-end">
                <button title="Buscar" class="btn btn-primary btn-lg"
                    onclick="filtros_requisiciones.buscar(); return false;" id="button-buscar"><span class="iconify"
                        data-icon="mdi:magnify"></span></button>
                <button title="Limpiar" class="btn btn-warning btn-lg" type="reset"
                    onclick="filtros_requisiciones.limpiar();" id="button-limpiar"><span class="iconify"
                        data-icon="mdi:broom"></span></button>
            </div>
        </form>
    </div>
</div>

<table id="req_requisiciones_datatable" class="table {% if estatus == 'B'%}table-dark{% endif %} display nowrap"
    style="width:100%">
    <thead>
        <tr>
            <th>ID</th>
            <th>Estado</th>
            <th>Glosa</th>
            <th>Observaciones</th>
            <th>Oficina solicitante</th>
            <th>Creado por</th>
            <th>Fecha</th>
        </tr>
    </thead>
</table>
{% endcall %}
{% endblock %}



{% block custom_javascript %}
<!-- Importación de la configuración para DataTables -->
<script src="/static/js/datatables-constructor.js"></script>
<!-- Importación de los fitlros para dataTable -->
<script src="/static/js/datatables-filtros.js"></script>
<!-- Configuración del DataTable -->
<script>
    const constructorDataTable = new ConfigDataTable('{{ csrf_token() }}');
    let configDataTable = constructorDataTable.config();
    configDataTable['ajax']['url'] = '/req_requisiciones/datatable_json';
    configDataTable['ajax']['data'] = {{ filtros }};
    configDataTable['columns'] = [
        { data: 'detalle' },
        { data: 'estado' },
        { data: 'glosa' },
        { data: 'observaciones' },
        { data: 'oficina' },
        { data: 'creado' },
        { data: 'fecha' },
    ];
    configDataTable['columnDefs'] = [
        {
            targets: 0, // detalle
            data: null,
            render: function (data, type, row, meta) {
                return '<a href="' + data.url + '">' + data.gasto + '</a>';
            }
        },
        { width: '20%', targets: 3 }
    ];

    // Declaración de los Filtros utilizados
    // Creación del Objeto manejador de Filtros
    const filtrosRequisiciones = new FiltrosDataTable('#req_requisiciones_datatable', configDataTable);
    // Añadimos los difrentes inputs utilizados
    filtrosRequisiciones.agregarInput('glosaInput', 'glosa', filtrosRequisiciones.UPPER);
    filtrosRequisiciones.agregarInput('observacionesInput', 'observaciones', filtrosRequisiciones.UPPER);
    // Precarga de los valores de los inputs mantenidos después de la carga de la página.
    filtrosRequisiciones.precargar();

</script>
{% endblock %}