{% extends 'layouts/app.jinja2' %}
{% import 'macros/form.jinja2' as f with context %}
{% import 'macros/topbar.jinja2' as topbar %}

{% block title %}Cancelar Requisición Revisada{% endblock %}

{% block topbar_actions %}
    {{ topbar.page('Cancelar Requisición Revisada ' + req_requisicion.id | string) }}
{% endblock %}

{% block content %}
    {% call f.card(title='Cancelar Requisición Revisada') %}
        {% set form_kwargs = {'req_requisicion_id': req_requisicion.id} %}
        {% call f.form_tag('req_requisiciones.cancel_4_review', fid='cancel_4_review_form', **form_kwargs) %}
            {% call f.form_group(form.reviso_nombre, readonly=true) %}{% endcall %}
            {% call f.form_group(form.reviso_puesto, readonly=true) %}{% endcall %}
            {% call f.form_group(form.reviso_email, readonly=true) %}{% endcall %}
            {% call f.form_group(form.motivo) %}{% endcall %}
            {% call f.form_group(form.contrasena) %}{% endcall %}
            {% call f.form_group(form.cancelar) %}{% endcall %}
        {% endcall %}
    {% endcall %}
{% endblock %}
