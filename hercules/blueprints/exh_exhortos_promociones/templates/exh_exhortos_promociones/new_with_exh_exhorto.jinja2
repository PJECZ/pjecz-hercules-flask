{% extends 'layouts/app.jinja2' %}
{% import 'macros/form.jinja2' as f with context %}
{% import 'macros/topbar.jinja2' as topbar %}

{% block title %}Agregar Promoción al Exhorto{% endblock %}

{% block topbar_actions %}
    {{ topbar.page('Agregar Promoción al Exhorto ' + exh_exhorto.exhorto_origen_id) }}
{% endblock %}

{% block content %}
    {% call f.card() %}
        {% set form_kwargs = {'exh_exhorto_id': exh_exhorto.id} %}
        {% call f.form_tag('exh_exhortos_promociones.new_with_exh_exhorto', fid='exh_exhorto_promocion_form', **form_kwargs) %}
            {% call f.form_group(form.folio_origen_promocion, readonly=true) %}{% endcall %}
            {% call f.form_group(form.fojas) %}{% endcall %}
            {% call f.form_group(form.observaciones) %}{% endcall %}
            {% call f.form_group(form.crear) %}{% endcall %}
        {% endcall %}
    {% endcall %}
{% endblock %}
