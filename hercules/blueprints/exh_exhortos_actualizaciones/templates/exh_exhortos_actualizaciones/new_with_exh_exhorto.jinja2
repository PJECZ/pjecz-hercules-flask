{% extends 'layouts/app.jinja2' %}
{% import 'macros/form.jinja2' as f with context %}
{% import 'macros/topbar.jinja2' as topbar %}

{% block title %}Agregar Actualización al Exhorto {{ exh_exhorto.exhorto_origen_id }}{% endblock %}

{% block topbar_actions %}
    {% call topbar.page_buttons('Agregar Actualización al Exhorto ' + exh_exhorto.exhorto_origen_id) %}
    {% endcall %}
{% endblock %}

{% block content %}
    {% call f.card() %}
        {% set form_kwargs = {'exh_exhorto_id': exh_exhorto.id} %}
        {% call f.form_tag('exh_exhortos_actualizaciones.new_with_exh_exhorto', fid='exh_exhorto_actualizacion_form', **form_kwargs) %}
            {% call f.form_group(form.actualizacion_origen_id, readonly = true) %}{% endcall %}
            {% call f.form_group(form.tipo_actualizacion) %}{% endcall %}
            {% call f.form_group(form.descripcion) %}{% endcall %}
            {% call f.form_group(form.guardar) %}{% endcall %}
        {% endcall %}
    {% endcall %}
{% endblock %}
